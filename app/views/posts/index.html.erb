<h1>Welcome</h1>

<p class="text-muted">Here you'll find a collection of blog posts!</p>

<div class="mt-4"></div>

<hr/>
<% @posts.each do |post| %>
    <h3 class="text-success">  <%= post.title %> </h3>
    <p>  <%= post.body %> </p>
    <%= link_to "Read More", post_path(post), :class => 'btn btn-outline-success'%>
    <div class="mt-5"><hr/></div>
<% end %>