<%# ??? I don't understand this form_for syntax %>
<%= form_for([@post, @post.comments.build]) do |f| %> 

    <p>
        <%= f.label(:user)%> <br/>
        <%= f.text_field(:user, {:class => 'form_control'}) %> <br/>
    </p>

    <p>
        <%= f.label(:body) %> <br/>
        <%= f.text_area(:body, {:class => 'form_control'}) %> <br/>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>

<% end %>