<h1>Edit Post</h1>

<%# Notice how we use the REST "PATCH" method and refer to the "posts_path" URL. This will hit the edit method within posts controller%>
<%= form_for :post, url: post_path(@post), method: :patch, :html => { :class => "new_post_form" } do |f| %> 
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
            <div class="alert alert-danger"> <%= msg %> </div>
        <% end %>    
    <% end %>

    <p>
        <%= f.label(:title)%> <br/>
        <%= f.text_field(:title, {:class => 'form_control'}) %> <br/>
    </p>

    <p>
        <%= f.label(:body) %> <br/>
        <%= f.text_area(:body, {:class => 'form_control'}) %> <br/>
    </p>

    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>

<% end %>